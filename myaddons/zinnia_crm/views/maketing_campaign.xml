<odoo>
    <data>
        <record model="ir.actions.act_window" id="maketing_campaign_action">
            <field name="name">Maketing campaign</field>
            <field name="res_model">crm.maketing_campaign</field>
        </record>

        <record model="ir.ui.view" id="maketing_campaign_tree_view">
            <field name="name">Maketing campaign</field>
            <field name="model">crm.maketing_campaign</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="ld_source"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="maketing_campaign_form">
            <field name="name">Maketing campaign</field>
            <field name="model">crm.maketing_campaign</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="arch" type="xml">
                <form editable="top">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="ld_source"/>
                    <field name="total"/>
                </form>
            </field>
        </record>
        <menuitem name="Maketing Campaign" id="menu_maketing_campaign" action="maketing_campaign_action" parent="menu_heading_treatment"/>

    </data>
</odoo>